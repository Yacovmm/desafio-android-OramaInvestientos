<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yacov.myoramafundsapp.activity.DetailsActivity"
    android:orientation="vertical"
    >



    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".controller.DetailsActivity"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conheça a estratégia do fundo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#4f996c"
                    />

                <TextView
                    android:id="@+id/strategyID"
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fundo classificado como Renda Fixa Tesouro Selic, com objetivo de seguir a variação CDI. A carteira do Fundo é composta somente por títulos públicos pós-fixados (Tesouro Selic), ou seja, papéis da dívida do governo."
                    android:textSize="15sp"
                    android:layout_marginStart="3dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ededed"
                    >
                </View>


                <TextView
                    android:id="@+id/padrao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:text="Rentabilidade:"
                    android:textColor="#4f996c"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="8"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@+id/padrao"
                            android:text="Ano(%):"
                            android:textSize="14sp"
                            android:layout_marginRight="-11dp"
                            />
                        <TextView
                            android:id="@+id/profitYearID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@+id/padrao"
                            android:text="12.05"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@+id/padrao"
                            android:text="Mes(%):"
                            android:textSize="14sp"
                            android:layout_marginRight="-11dp"
                            />
                        <TextView
                            android:id="@+id/profitMonthID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15%"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_below="@+id/padrao"
                            android:text="Dia(%):"
                            android:textSize="14sp"
                            android:layout_marginRight="-11dp"
                            />
                        <TextView
                            android:id="@+id/profitDayID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:text="Sobre o Fundo:"
                    android:textColor="#4f996c"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mínimo para 1ª aplicação: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/minimiumAplyID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mínimo para aplicações adicionais: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/minimiumAplyAddID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dias para conversão da aplicação: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/convertDaysID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D + 0"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horário limite de aplicação: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/limitTimeID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:text="Dados do fundo:"
                    android:textColor="#4f996c"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CNPJ: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/cnpjID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.807810/0001-21"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Público alvo: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/publicoAlvoID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investidores em geral"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome do gestor: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/gestorNomeID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investidores em geral"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfil de risco: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/riskProfileID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investidores em geral"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data de início: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/initialDateID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investidores em geral"
                        android:textSize="14sp"
                        />


                </LinearLayout>






            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/action_bar"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="Órama"
                app:titleTextColor="#ffffff"
                android:id="@+id/toolBarDetaisID"
                app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ffaa"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tituloID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Western Asset Feeder FIC FIRF Referenciado Selic"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="@color/colorPrimary"
                            android:textColor="#ffffff"
                            android:padding="5dp"
                            />

                        <TextView
                            android:id="@+id/aboutID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Indicado para investidores que buscam retornos consistentes e segurança, pois os títulos que compõem a sua carteira são considerados investimentos de menor risco do mercado."
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:background="@color/colorPrimary"
                            android:textColor="#ffffff"
                            android:padding="5dp"

                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


        </android.support.design.widget.AppBarLayout>



    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
